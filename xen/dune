(copy_files# ../src/native/*)

(library
 (name nocrypto_xen)
 (public_name nocrypto.xen)
 (optional)
 (libraries ocaml-xen)
 (c_flags (:include ../src/c_flags.sexp) (:include cflags-xen.sexp))
 (c_names misc hash_stubs md5 sha1 sha256 sha512 aes_generic
          aes_aesni des_generic ghash_pclmul ghash_generic)
)

(rule (with-stdout-to cflags-xen.sexp (run ./cflags.sh)))
